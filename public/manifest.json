{
  "name": "Pocket Pause",
  "short_name": "PocketPause",
  "description": "Pause before you purchase",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#FF9E1B",
  "icons": [
    {
      "src": "/icons/app-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.ico",
      "sizes": "any",
      "type": "image/x-icon"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "url": "shared_url",
      "text": "shared_text",
      "title": "shared_title"
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "text/html": [".html"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pocketpause",
      "url": "/?url=%s"
    }
  ],
  "categories": ["shopping", "lifestyle", "productivity"]
}